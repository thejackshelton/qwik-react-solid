---
import astroLogo from "../assets/astro.svg?url";
import qwikLogo from "../assets/qwik.svg?url";
import { Counter } from "../components/qwik/counter.tsx";
import { Counter as ReactCounter } from "../components/react/counter.tsx";
import { Counter as SolidCounter } from "../components/solid/counter.tsx";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Qwik + Astro">
  <Counter />
  <SolidCounter client:load />
  <ReactCounter client:only="react" />
</Layout>

<style is:global>
  #app {
    max-width: 1280px;
    margin: 0 auto;
    padding: 2rem;
    text-align: center;
  }
  .brand {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .love {
    display: inline-block;
    font-size: 1.5em;
  }
  .logo {
    height: 6em;
    padding: 1.5em;
  }
  .logo:hover {
    filter: drop-shadow(0 0 2em #646cffaa);
  }
  .logo.qwik:hover {
    filter: drop-shadow(0 0 2em #673ab8aa);
  }
  .motivation {
    font-size: 1.25em;
    font-weight: 300;
  }
  .read-the-docs {
    color: #888;
  }
</style>
